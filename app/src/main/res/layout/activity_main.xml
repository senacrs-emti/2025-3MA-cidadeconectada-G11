<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbarThumbHorizontal="@drawable/lupa"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tituloid"
        android:layout_width="238dp"
        android:layout_height="223dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094"
        app:srcCompat="@drawable/logooficial" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="232dp"
        android:layout_height="121dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Acompanhe obras em Porto Alegre"
        android:textColor="#de386a"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="204dp" />

    <SearchView
        style="@android:style/Widget.Material.SearchView"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/white"
        android:closeIcon="@drawable/lupa"
        android:commitIcon="@drawable/lupa"
        android:foregroundTint="@color/white"
        android:goIcon="@drawable/lupa"
        android:queryBackground="@drawable/lupa"
        android:submitBackground="@drawable/lupa"
        android:tint="@color/white"
        android:voiceIcon="@drawable/lupa"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>